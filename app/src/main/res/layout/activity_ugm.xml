<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UgmActivity">

    <LinearLayout
        android:id="@+id/headerDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:padding="20dp">

        <ImageView
            android:id="@+id/icArrowback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Kampus"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/gray"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerDetail"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="320dp"
                android:layout_height="130dp"
                android:src="@drawable/fotougm"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Universitas Gajah Mada"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/darkBlue"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/Detail_UGM" />

            <TextView
                android:id="@+id/tvWebUGM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Lihat lebih lanjut.."
                android:textStyle="bold"
                android:textColor="@color/darkBlue"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Fakultas dan Prodi"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Fakultas Psikologi"
                 />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnPsikologi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Psikologi"/>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Fakultas Teknologi Pertanian"
                 />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnIlmuPangan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ilmu dan Teknologi Pangan"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnAgribisnis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agribisnis"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnTeknikPertanian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teknik Pertanian"
                        android:layout_marginEnd="8dp"/>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Fakultas Hukum"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnIlmuHukum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ilmu Hukum"/>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>



    </ScrollView>




</RelativeLayout>